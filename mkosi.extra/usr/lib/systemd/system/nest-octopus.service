[Unit]
Description=Nest Octopus Heating Optimizer Service
After=network-online.target
Wants=network-online.target
OnFailure=nest-octopus-fail.service

[Service]
Type=notify-reload
ExecStart=/usr/bin/python3 -u -m nest_octopus.heating_optimizer
Restart=on-failure
ImportCredential=api_key
ImportCredential=client_secret
ImportCredential=refresh_token
ImportCredential=tg_password
RuntimeDirectory=nest-octopus
TemporaryFileSystem=/run
BindReadOnlyPaths=-/etc/nest-octopus

[Install]
WantedBy=multi-user.target
